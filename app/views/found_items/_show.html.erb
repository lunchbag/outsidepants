<h1>Unclaimed Items</h1>

<% if @unclaimed_items.blank? %>
None yet!
<% else %>
<table class="item-table">
	<thead>
		<tr>
			<td>Image</td>
			<td>Item Description</td>
			<td>Item ID</td>
			<!-- <td>Location Found</td>
			<td>Current Location</td> -->
			<td>Status</td>
		</tr>
	</thead>
	<tbody>
	<% @unclaimed_items.reverse.each do |f| %>
		<tr>
			<td>
				<% if f.image.present? %>
				<%= link_to f.image.url(:large) do %>
					<%= image_tag f.image.url(:thumb) %>
				<% end %>
				<% else %>
				none
				<% end %>
			</td>
			<td>
				<%= f.product %> - <%= f.description %> 
			</td>
			<td>
				<%= f.item_id %>
			</td><!-- 
			<td>
				<%= f.location_found %>
			</td>
			<td>
				<%= f.current_location %>
			</td> -->
			<td>
				<% if f.claimed_status %>
					Claimed!
				<% else %>
					Unclaimed
					<% if !current_user.nil? and current_user.admin %>
						<br />
						<%= link_to 'Mark as Claimed', found_items_toggle_status_url(f) %>
						<br />
						<%= link_to 'Edit entry', edit_found_item_url(f) %>
					<% end %>
				<% end %>
			</td>
		</tr>
	<% end %>



	</tbody>
</table>
<% end %>

<br /><br />

<% if current_user and current_user.admin? %>
<h1>Claimed Items (admin only)</h1>

<% if @claimed_items.blank? %>
None yet!
<% else %>
<table class="item-table">
	<thead>
		<tr>
			<td>Image</td>
			<td>Item Description</td>
			<td>Item ID</td>
			<td>Location Found</td>
			<td>Current Location</td>
			<td>Status</td>
		</tr>
	</thead>
	<tbody>
	<% @claimed_items.reverse.each do |f| %>
		<tr>
			<td>
				<% if f.image.present? %>
				<%= link_to f.image.url(:large) do %>
					<%= image_tag f.image.url(:thumb) %>
				<% end %>
				<% else %>
				none
				<% end %>
			</td>
			<td>
				<%= f.product %> - <%= f.description %> 
			</td>
			<td>
				<%= f.item_id %>
			</td>
			<td>
				<%= f.location_found %>
			</td>
			<td>
				<%= f.current_location %>
			</td>
			<td>
				<% if f.claimed_status %>
					Claimed!
				<% else %>
					Unclaimed
					<% if !current_user.nil? and current_user.admin %>
					<br /><%= link_to 'Mark as Claimed', found_items_toggle_status_url(f) %>
					<% end %>
				<% end %>	
			</td>
		</tr>
	<% end %>



	</tbody>
</table>
<% end %>

<% end %>